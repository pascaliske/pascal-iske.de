{
  "hosting": {
    "public": "dist/app",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "stats.json",
      "stats.html",
      "3rdpartylicenses.txt",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/cfns/send-contact-request",
        "function": "sendContactRequest"
      },
      {
        "source": "/cfns/send-csp-report",
        "function": "sendCspReport"
      }
    ],
    "headers": [
      {
        "source": "**/*",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; connect-src 'self' sentry.io; style-src 'self' 'unsafe-inline' fonts.googleapis.com; script-src 'self' www.google-analytics.com 'sha256-NfLWBsQFRCVaPqTzsyqH+up8K4fd01oz/9ALl1M2CkY='; img-src 'self' www.google-analytics.com; font-src fonts.gstatic.com; object-src 'none';"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Xss-Protection",
            "value": "1; mode=block"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          }
        ]
      },
      {
        "source": "**/*",
        "headers": [
          {
            "key": "Feature-Policy",
            "value": "accelerometer 'none'; ambient-light-sensor 'none'; autoplay 'none'; camera 'none'; encrypted-media 'none'; fullscreen 'none'; geolocation 'none'; gyroscope 'none'; magnetometer 'none'; microphone 'none'; midi 'none'; payment 'none'; picture-in-picture 'none'; speaker 'none'; sync-xhr '*'; usb 'none'; vr 'none';"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "private, max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|json|txt)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "dist/cfn"
  }
}
