{
  "name": "pascal-iske",
  "description": "Angular Web App built with Travis CI and deployed with Firebase.",
  "version": "1.4.6",
  "license": "MIT",
  "scripts": {
    "ng": "ngw",
    "firebase": "firebase",
    "bundlewatch": "bundlewatch",
    "report:generate": "lighthouse --quiet --chrome-flags=\"--headless\" --output-path=./report.html https://$PROD_DOMAIN",
    "report:upload": "now report.html --token $NOW_TOKEN --no-clipboard --public",
    "start": "ngw serve",
    "start:local": "serve --config serve.json --listen 4201 --no-clipboard",
    "build": "yarn run build:app && yarn run build:server && yarn run build:cfn && yarn run build:prerender",
    "build:app": "ngw build --prod --aot --build-optimizer --stats-json",
    "build:server": "ngw run pascal-iske:server --configuration production",
    "build:cfn": "tsc --project src/tsconfig.cfn.json && cp src/cfn/package.json dist/cfn/package.json",
    "build:prerender": "ts-node src/prerender.ts",
    "lint": "ngw lint pascal-iske --fix",
    "check": "snyk test && snyk monitor",
    "format": "prettier --config .prettierrc --write \"**/*.{ts,scss,md}\""
  },
  "private": true,
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/app/*.js",
        "maxSize": "250kB"
      },
      {
        "path": "dist/cfn/*.js",
        "maxSize": "5kB"
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^7.1.2",
    "@angular/common": "^7.1.2",
    "@angular/compiler": "^7.1.2",
    "@angular/core": "^7.1.2",
    "@angular/forms": "^7.1.2",
    "@angular/http": "^7.1.2",
    "@angular/platform-browser": "^7.1.2",
    "@angular/platform-browser-dynamic": "^7.1.2",
    "@angular/platform-server": "^7.1.2",
    "@angular/pwa": "^0.11.2",
    "@angular/router": "^7.1.2",
    "@angular/service-worker": "^7.1.2",
    "@fortawesome/angular-fontawesome": "^0.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.9",
    "@fortawesome/free-brands-svg-icons": "^5.6.0",
    "@fortawesome/free-regular-svg-icons": "^5.6.0",
    "@fortawesome/free-solid-svg-icons": "^5.6.0",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
    "@ngx-progressbar/core": "~5.2.1",
    "@ngx-progressbar/http": "~5.3.0",
    "@ngx-progressbar/router": "~5.2.1",
    "@pascaliske/form-elements": "^1.2.2",
    "@pascaliske/html-helpers": "^1.2.2",
    "@pascaliske/ngx-notifications": "^1.0.11",
    "@pascaliske/ngx-sentry": "^1.1.0",
    "@sentry/browser": "4.4.2",
    "cookieconsent": "^3.1.0",
    "core-js": "^2.6.0",
    "highlight.js": "^9.13.1",
    "intersection-observer": "^0.5.1",
    "lodash-es": "^4.17.11",
    "modularscale-sass": "^3.0.8",
    "ngx-cookieconsent": "^2.0.0",
    "ngx-markdown": "^7.0.2",
    "normalize-scss": "^7.0.1",
    "rxjs": "^6.3.3",
    "susy": "^3.0.5",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.11.2",
    "@angular/cli": "^7.1.2",
    "@angular/compiler-cli": "^7.1.2",
    "@angular/language-service": "^7.1.2",
    "@pascaliske/ngx-prerenderer": "^1.0.1",
    "@types/cors": "^2.8.4",
    "@types/fs-extra": "^5.0.4",
    "@types/google.analytics": "^0.0.39",
    "@types/highlight.js": "^9.12.3",
    "@types/lodash-es": "^4.17.1",
    "@types/node": "10.12.18",
    "@types/nodemailer": "^4.6.5",
    "@types/webpack": "^4.4.21",
    "bundlewatch": "^0.2.1",
    "chalk": "^2.4.1",
    "codelyzer": "^4.5.0",
    "cors": "^2.8.5",
    "firebase-admin": "^6.3.0",
    "firebase-functions": "^2.1.0",
    "firebase-tools": "^6.1.2",
    "fs-extra": "^7.0.1",
    "lighthouse": "^4.0.0-alpha.2-3.2.1",
    "ngw": "^7.0.0",
    "nodemailer": "^4.7.0",
    "now": "^12.1.11",
    "prettier": "^1.15.3",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "rxjs-tslint-rules": "^4.13.1",
    "serve": "^10.1.1",
    "snyk": "^1.116.4",
    "ts-node": "~7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "~3.1.6",
    "webpack": "^4.27.1",
    "webpack-plugin-replace": "^1.1.1",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
